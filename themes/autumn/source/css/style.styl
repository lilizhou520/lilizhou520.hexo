@import "_partial/font"
@import "_partial/header"
@import "_partial/footer"
@import "_partial/post"
@import "_widget/aside"

body 
  font-size: 1rem
  line-height: 1.6
  margin: 0
  -webkit-tap-highlight-color: rgba(0,0,0,0)

.container 
  max-width: 1142px
  width: 90%
  box-sizing: border-box
  padding: 1em 3%
  background: white
  margin: 1em auto
  overflow: hidden

  .main
    margin: 1em 0 0
    width: 70%
    float: left

.invisibile
  visibility: hidden

.hidden
  display: none
  
@media screen and (max-width: 1015px) 
  .container .main
    width: 100%

@media screen and (max-width: 640px) 
  .container
    margin: 3em 0 0
    width: 100%
    padding: 1.75em
